{
    "ts-node": {
        // It is faster to skip typechecking.
        // Remove if you want ts-node to do typechecking.
        "transpileOnly": true,
        "files": true,
        "esm": true,
        "compilerOptions": {
          "types": ["node"],
          "module": "ESNext",
          "target": "ESNext"
        }
    },
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "./types",
        "emitDeclarationOnly": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}